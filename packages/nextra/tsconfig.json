{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "types": ["vitest/globals"],
    "paths": {
      "unified": ["./node_modules/unified"]
    },
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["dist"]
}

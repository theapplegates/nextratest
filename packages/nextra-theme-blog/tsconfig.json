{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "types": ["vitest/globals"],
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["dist"]
}
